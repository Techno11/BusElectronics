{
  "name": "busgui-backend",
  "version": "0.0.1",
  "description": "Backend for the Bus GUI project",
  "main": "build/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsc && node build/index.js",
    "build": "tsc",
    "build-bin-win": "pkg . -t node14-win",
    "build-bin-linux": "pkg . -t node14-linux",
    "build-bin-armlinux": "pkg . -t node14-linux-arm64"
  },
  "author": "Soren Zaiser",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "helmet": "^5.0.2",
    "serialport": "^9.2.8",
    "socket.io": "^4.4.1",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.35",
    "@types/serialport": "^8.0.2",
    "pkg": "^5.7.0"
  },
  "bin": "build/index.js",
  "pkg": {
    "assets": [
      "public/**/*",
      "node_modules/@serialport/**/*"
    ],
    "outputPath": "../bin"
  }
}
